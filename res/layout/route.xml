<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/route"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <TextView
            android:id="@+id/checkId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pointFrom"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:text="Площадь Ленина"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_below="@+id/leftPassengers"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/timeFrom" />

        <TextView
            android:id="@+id/pointTo"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:text="Конечная остановка"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_below="@+id/pointFrom"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/timeFrom" />

        <TextView
            android:id="@+id/dateFrom"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/timeFrom"
            android:gravity="center"
            android:text="20.09"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/timeFrom"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/pointTo"
            android:layout_toStartOf="@+id/dateFrom"
            android:gravity="center"
            android:text="7:00"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="100dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="80р."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/maxPassengers"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/check"
            android:gravity="center_vertical"
            android:text="3 пассажира" />

        <TextView
            android:id="@+id/leftPassengers"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:text="1 осталось"
            android:layout_below="@+id/maxPassengers"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/price" />

        <TextView
            android:id="@+id/check"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/price"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/pointFrom"
            android:background="#dc9e00"
            android:gravity="center_vertical"
            android:text="Заказать"
            android:textAlignment="center"
            android:textColor="#ffffff" />

    </RelativeLayout>
</LinearLayout>